generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Guild {
  id               String @id @unique
  captchaChannelId String @unique
  verifiedRoleId   String @unique

  @@map("guilds")
}

model Member {
  id           String   @id @unique
  try          Int      @default(0)
  guildId      String   @unique
  timestampTry DateTime

  @@unique([id, guildId])
  @@map("members")
}
